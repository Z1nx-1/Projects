import time
import uuid

def login_funtion(username,password):
    print("\n\nWelcome to Jack Program. Please Login: ")
    
    user_entered_username = input("Username: ")
    user_entered_password = input("Password: ")

    if user_entered_username == username and user_entered_password == password:
        print("Login Successful")
        time.sleep(1)    
    else:
        print("Login Failed")
        time.sleep(1), quit()

def user_enter_data():
    name = input("Enter your Name: ")
    age = int(input("Enter your Age: "))
    nationallity = input("Enter your nationallity: ")
    id = (uuid.uuid4())

    print("Console - ", name, age, nationallity)
    data_processing(name,age,nationallity,id)

def data_processing(name,age,nationallity,id):
    save = input("Save DATA? Y/N: ")
    if save == "Y" or save == "y":
        with open('data.txt', 'w') as f:
            f.write(name)
            f.write(" ")
            f.write('{}'.format(age))
            f.write(" ")
            f.write(nationallity)
            f.write(" ")
            f.write('{}'.format(id))
            print("Saved")
    if save == "N" or save == "n":
        print("Console - DATA Discarded")              

def find_username(incoming_credendials_file):
    username = incoming_credendials_file.readline()
    print("Username: " + username)
    return username

def find_password(incoming_credendials_file):   
    password = incoming_credendials_file.readline()
    print("Password: " + password)
    return password

