import time

def login_function(username, password):
    print("\n\nWelcome to Jack Program. Please Login: ")

    user_entered_username = input("Enter USERNAME: ")
    user_entered_password = input("Enter PASSWORD: ")
    if user_entered_username == username and user_entered_password == password():
        print("Login Successful.")
        time.sleep(1)
    else:
        print("login failed.")
        time.sleep, quit()

def find_username(incoming_credendials_files):
    username = incoming_credendials_files.readline()
    print("USERNAME: " + username) 
    return username

def find_password(incoming_credendials_files):
    password = incoming_credendials_files.readline.readline()
    print("PASSWORD: " + password)
    return password

def main():

    credenials_file = open("login.txt", "r")
    username = find_username(credenials_file)
    password = find_password(credenials_file)
   
   
    find_username
    find_password

    login_function(username, password)
